extends ../layout

block content
  .container.mt-4
    h1.mb-4 Create New Blog Post
    form(action='/blog', method='POST')
      .form-group.mb-3
        label(for='title') Title
        input#title.form-control(type='text', name='title', required)
      .form-group.mb-3
        label(for='content') Content
        textarea#content.form-control(name='content', rows='10', required)
      button.btn.btn-primary(type='submit') Create Post
      a.btn.btn-secondary.ms-2(href='/blog') Cancel
