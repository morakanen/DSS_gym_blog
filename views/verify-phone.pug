extends layout

block content
  .container.py-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-lg
          .card-body
            h2.text-center.mb-4 Phone Verification
            if error
              .alert.alert-danger= error
            form(method="POST" action="/verify-phone")
              .mb-3
                label.form-label(for="code") Enter the 6-digit code sent to your phone
                input.form-control(type="text", name="code", required, pattern="\\d{6}", maxlength="6")
              button.btn.btn-primary.w-100(type="submit") Verify
